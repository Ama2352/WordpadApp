<Window x:Class="Wordpad.Files.PrintPageNumberWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wordpad.Files"
        mc:Ignorable="d"
        Title="Additional Setting" Height="123" Width="300">
    <Grid Margin="10">
        <!-- Checkbox Print Page Number -->
        <CheckBox x:Name="chkPrintPageNumber" Content="Print Page Number" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10">
            <Button x:Name="btnOK" Content="OK" Width="75" Margin="10,0,10,0" Click="btnOK_Click" IsDefault="True"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="75" Click="btnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
